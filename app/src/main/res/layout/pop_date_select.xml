<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00000000" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#f00" >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:background="@null"/>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:background="@null"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="45%w">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#fff">

            <com.weelviewdemo.android.wheel.WheelView
                android:id="@+id/welYear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />
            <com.weelviewdemo.android.wheel.WheelView
                android:id="@+id/welMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />
            <com.weelviewdemo.android.wheel.WheelView
                android:id="@+id/welDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

        </LinearLayout>

        <TextView
            app:layout_marginTopPercent="15%w"
            style="@style/line_horizontal"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            app:layout_marginTopPercent="30%w"
            style="@style/line_horizontal"
            android:focusable="false"
            android:focusableInTouchMode="false"/>



    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>